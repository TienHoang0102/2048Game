def sum_nth_numbers(numbers, n):
    # total_count = 0
    count = 0
    sum_a = 0
    print(numbers)
    for i in numbers:
        if count == n-1:
            sum_a += i
            count = -1
            # break
        count += 1
    return sum_a
arr = []
in_arr = int(input('Enter a number into a list: '))
while in_arr != 0:
    arr.append(in_arr)
    in_arr = int(input('Enter a number into a list: '))
in_num = int(input('Input a number of numbers in a list:'))
print(sum_nth_numbers(arr, in_num))
